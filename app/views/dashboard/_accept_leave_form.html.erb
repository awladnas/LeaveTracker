<div class="col-lg-12">
  <div class="span"> User: <%=leave.user.email %>  </div>
    <%= form_for(leave) do |f| %>
        <div class="fields">
          <%= f.label :start_date %><br>
          <%= f.object.start_date %>
        </div>
        <div class="fields"><%= f.object.end_date %></div>
        <div class="fields"><%= f.object.leave_type %> </div>
        <div class="fields"><%= get_left_leave_hours(f.object.leave_type, f.object.user) %> </div>
        <div class="fields"><%= get_left_leave_hours(f.object.leave_type, f.object.user) %> </div>
      <div class="fields"><%= f.select :leave_status, options_for_select([['Pending', 'PENDING'], ['Recommanded', 'RECOMMANDED'], ['Not Recommanded', 'NOT_RECOMANDED']]) %> </div>
      <div class="actions">
        <%= f.submit %>
      </div>

    <% end %>
</div>