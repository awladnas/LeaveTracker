<h1>Listing leaves</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Leave type</th>
      <th>Leave status</th>
      <th>Leave date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leaves.each do |leafe| %>
      <tr>
        <td><%= leafe.user_id %></td>
        <td><%= leafe.leave_type %></td>
        <td><%= leafe.leave_status %></td>
        <td><%= leafe.leave_date %></td>
        <td><%= link_to 'Show', leafe %></td>
        <td><%= link_to 'Edit', edit_leafe_path(leafe) %></td>
        <td><%= link_to 'Destroy', leafe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Leave', new_leafe_path %>
