<h1><%= @user.email%></h1>
<div class="col-lg-12">

    <div class="col-lg-6">
      <h3>Casual: </h3>
        <div >
          <span>Leave Left: <%= @user.hours_left('CASUAL') %> Hours</span>
        </div>
        <div >
          <span> Leave Consumed: <%= @user.total_casual_consume || 0.0 %> Hours</span>
        </div>
    </div>

  <div class="col-lg-6">
    <h3>Sick: </h3>
        <div >
          <span> Leave Left: <%= @user.hours_left('SICK') %> Hours</span>
        </div>
        <div >
          <span> Leave Consumed: <%= @user.total_sick_consume || 0.0 %> Hours</span>
        </div>
    </div>


  <div id="pending" class="col-lg-6">
    <h3>Pending Leave</h3>
    <%= render :partial => "leaves/leaves" , :locals =>{ :leaves => get_leaves_by_status(@user, "PENDING")} %>
  </div>
  <div id="recommended" class="col-lg-6">
    <h3>Recommended Leave</h3>
    <%= render :partial => "leaves/leaves" , :locals =>{ :leaves => get_leaves_by_status(@user, "RECOMMENDED")} %>
  </div>
</div>
