<h1>Listing leaves</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Leave type</th>
      <th>Leave status</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leaves.each do |leafe| %>
      <tr>
        <td><%= leafe.user_id %></td>
        <td><%= leafe.leave_type %></td>
        <td><%= leafe.leave_status %></td>
        <td><%= leafe.start_date %></td>
        <td><%= leafe.end_date %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Leave', new_leafe_path %>
